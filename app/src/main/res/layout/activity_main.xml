<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SeekBar
        android:id="@+id/s_red"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:max="255"
        android:progressTint="#DF042C"
        android:thumbTint="#DF042C"
        android:layout_marginTop="10dp"
        />

    <SeekBar
        android:id="@+id/s_green"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:max="255"
        android:progressTint="@android:color/holo_green_dark"
        android:thumbTint="@android:color/holo_green_dark"
        android:layout_marginTop="30dp"
        />

    <SeekBar
        android:id="@+id/s_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="255"
        android:progressTint="#020FF4"
        android:thumbTint="#020FF4"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red:0"
        android:layout_marginTop="70dp"

    />

    <TextView
        android:id="@+id/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green:0"
        android:layout_marginTop="90dp"

        />

    <TextView
        android:id="@+id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue:0"
        android:layout_marginTop="110dp"

        />

    <TextView
        android:id="@+id/color"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="(0,0,0)"
        android:layout_marginTop="200dp"
        android:gravity="center"

        />



</RelativeLayout>